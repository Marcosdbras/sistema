                    <th></th>
                    <th><?= __('Database'); ?></th>
                    <th><?= __('Table'); ?></th>
                    <th><?= __('Column'); ?></th>
                </tr></thead>
                <?php $i = 0; ?>
                <?php if (! empty($existrel_foreign)): ?>
                    <?php foreach ($existrel_foreign as $key => $one_key): ?>
                        <?= PhpMyAdmin\Template::get('table/relation/foreign_key_row')->render(
                            array(
                                'one_key' => $one_key,
                                'columns' => $columns,
                                'i' => $i++,
                                'options_array' => $options_array,
                                'tbl_storage_engine' => $tbl_storage_engine,
