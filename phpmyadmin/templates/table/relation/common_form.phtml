                    <?php endforeach; ?>
                <?php endif; ?>
                <?= PhpMyAdmin\Template::get('table/relation/foreign_key_row')->render(
                    array(
                        'one_key' => array(),
                        'columns' => $columns,
                        'i' => $i++,
                        'options_array' => $options_array,
                        'tbl_storage_engine' => $tbl_storage_engine,
                        'db' => $db
                    )
                ); ?>
                <tr>
                    <th colspan="6">
                        <a class="formelement clearfloat add_foreign_key" href="">
                            <?= __('+ Add constraint'); ?>
                    </td>
                </tr>
            </table>
            </div>
        </fieldset>
